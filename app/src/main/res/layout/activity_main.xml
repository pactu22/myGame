<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/btnPlay"
        android:layout_marginTop="156dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnLevels"
        android:layout_alignStart="@+id/btnLevels"
        android:onClick="play"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Levels"
        android:id="@+id/btnLevels"
        android:layout_below="@+id/btnPlay"
        android:layout_alignLeft="@+id/btnScores"
        android:layout_alignStart="@+id/btnScores"
        android:layout_marginTop="64dp"
        android:onClick="showLevels"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores"
        android:id="@+id/btnScores"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/btnLevels"
        android:layout_centerHorizontal="true"
        android:onClick="showScores"/>
</RelativeLayout>
